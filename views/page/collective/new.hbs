<div class="container text-center mt-5 nav-space">
  <h2 class="darkFont">{{title}}</h2>

  <form class="mt-3">
    <div class="form-row justify-content-center">
      <div class="form-group col-md-6">
        <div class="d-flex justify-content-start">
          <label for="collectiveName">Name</label>
        </div>
        <input type="text" class="form-control" id="collectiveName" placeholder="Collective Name">
      </div>
    </div>
    <div class="form-row justify-content-center">
      <div class="form-group col-md-6">
        <div class="d-flex justify-content-start">
          <label for="description">Description</label>
        </div>
        <textarea type="text" class="form-control" id="description" placeholder="Type something" rows="5"></textarea>
      </div>
    </div>
    <div class="form-row justify-content-center">
      <div class="form-group col-md-6">
        <div class="d-flex justify-content-start">
          <label for="admin">Admin</label>
        </div>
        <input disabled type="text" class="form-control" id="admin" placeholder="{{username}}">
      </div>
    </div>
    <div class="form-row justify-content-center">
      <div class="form-group col-md-6">
        <div class="d-flex justify-content-start">
          <label for="inputGroupFile01">Collective picture</label>
        </div>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
          </div>
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
          </div>
        </div>
      </div>
    </div>
    <div class="form-row justify-content-center">
      <div class="form-group col-md-6">
        <div class="d-flex justify-content-start">
          <label for="school">School</label>
        </div>
        <input type="text" autocomplete="off" list="colleges" class="form-control" id="school" placeholder="School">
        <datalist id="colleges">
          <option value="CSU Monterey Bay"></option>
          <option value="OsloMet"></option>
          <option value="UiO"></option>
        </datalist>
      </div>
    </div>
    <div class="form-row">
      <p class="darkFont text-center" id="collectiveFeedback"></p>
    </div>
  </form>

  <div class="my-5 text-center">
    <button id="createCollective" class="btn btn-finish" data-toggle="modal"><span
        class="lightFont signupFont">Create</span></button>
  </div>

</div>
<script src="/js/collective/new.js"></script>