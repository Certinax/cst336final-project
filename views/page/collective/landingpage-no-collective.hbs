<div class="container-fluid text-center mt-5">
  <h1 class="darkFont">{{title}}</h1>
  <p class="darkFont mt-4">You are currently not assigned to a collective</p>
  <div class="btn-group-vertical">
    <button onclick="window.location.href='/collective/new'" class="btn btn-finish my-5"><span
        class="lightFont signupFont">Create Collective</span></button>
    <button class="btn btn-finish my-5" data-toggle="modal" data-target="#modalJoinCollective"><span
        class="lightFont signupFont">Join Collective</span></button>
  </div>
</div>

<div class="modal fade" id="modalJoinCollective" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold darkFont">Join Collective</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <i class="mdi mdi-home prefix grey-text"></i>
          <input type="text" id="collective" class="form-control validate" autocomplete="off">
          <label data-error="Required field" data-success="" for="firstname">Collective link</label>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-finish"><span class="lightFont signupFont">Join</span></button>
      </div>
    </div>
  </div>
</div>