<div class="container text-center mt-5 nav-space">
    <h2 class="darkFont">{{title}}</h2>

    <h5 class="darFont">This week's duty master</h5>
    <h4 class="darkFont">Christina</h4>

    <table id="chores" class="table" style="border-collapse:collapse;">
        <p class="text-left">List of chores (click on a chore to view description)</p>
        <thead class="darkBackground lightFont">
        <tr>
            <th class="text-left" colspan="2">Name</th>
            <th class="text-right">Frequency</th>
            <th class="text-right pr-4">Action</th>
        </tr>
        </thead>
        <tbody id="chore-table-body" data-id="{{userId}}" class="chore-table">
			<tr>
				<td class="text-left align-middle" colspan="2" data-toggle="collapse" data-target=".item1">Daily garbage</td>
				<td class="text-right align-middle" data-toggle="collapse" data-target=".item1">1/7</td>
				<td class="d-flex justify-content-end"><button class="btn btn-finish btn-sm m-0" data-toggle="modal" data-target="#editChore"><span class="lightFont">Edit</span></button></td>
			</tr>
			<tr>
				<td class="hiddenRow" colspan="4">
					<div class="collapse item1 text-left">Description</div>
				</td>
			</tr>
			<tr>
				<td class="text-left align-middle" colspan="2" data-toggle="collapse" data-target=".item2">Kitchen vacuum</td>
				<td class="align-middle text-right" data-toggle="collapse" data-target=".item2">1</td>
				<td class="d-flex justify-content-end"><button class="btn btn-finish btn-sm m-0" data-toggle="modal" data-target="#editChore"><span class="lightFont">Edit</span></button></td>
			</tr>
			<tr>
				<td class="hiddenRow" colspan="4">
					<div class="collapse item2 text-left">Description</div>
				</td>
			</tr>
			<tr>
				<td class="text-left align-middle" colspan="2" data-toggle="collapse" data-target=".item3">Bathroom cleaning
				</td>
				<td class="align-middle text-right" data-toggle="collapse" data-target=".item3">1</td>
				<td class="d-flex justify-content-end"><button class="btn btn-finish btn-sm m-0" data-toggle="modal" data-target="#editChore"><span class="lightFont">Edit</span></button></td>
			</tr>
			<tr>
				<td class="hiddenRow" colspan="4">
					<div class="collapse item3 text-left">Description</div>
				</td>
			</tr>
        </tbody>
    </table>

    <div class="my-5 text-center">
        <button class="btn btn-finish" data-toggle="modal" data-target="#addChoreModal"><span class="lightFont signupFont">Add Chore</span></button>
    </div>
</div>

<!--Update Modal-->
<div class="modal fade" id="editChore" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold darkFont">Update chore</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="mdi mdi-clipboard-text-outline prefix grey-text"></i>
                    <input type="text" id="chore-update-name" class="form-control validate" autocomplete="off">
                    <label data-error="Required field" data-success="" for="chore-update-name">Chore name</label>
                </div>

                <div class="md-form mb-5">
                    <i class="mdi mdi-clipboard-text-outline prefix grey-text"></i>
                    <input type="number" id="chore-update-frequency" class="form-control validate" autocomplete="off">
                    <label data-error="Required field" data-success="" for="chore-update-frequency">Frequency</label>
                </div>

                <div class="md-form mb-5">
                    <i class="mdi mdi-clipboard-text-outline prefix grey-text"></i>
                    <input type="email" id="chore-update-description" class="form-control validate" autocomplete="off">
                    <label data-error="Not valid email" data-success="" for="chore-update-description">Description</label>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button id="btn-update" class="btn btn-finish lightFont signupFont">Update chore</button>
                <button type="button" class="btn btn-overdue" data-dismiss="modal"><span class="lightFont signupFont">Cancel</span></button>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button id="btn-delete" class="btn btn-overdue" data-toggle="modal" data-target="#deleteChoreModal"><span class="lightFont signupFont">Delete chore</span></button>
            </div>
        </div>
    </div>
</div>

<!--Create Modal-->
<div class="modal fade" id="addChoreModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold darkFont">New chore</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="mdi mdi-clipboard-text-outline prefix grey-text"></i>
                    <input type="text" id="firstname" class="form-control validate" autocomplete="off">
                    <label data-error="Required field" data-success="" for="firstname">Chore name</label>
                </div>

                <div class="md-form mb-5">
                    <i class="mdi mdi-clipboard-text-outline prefix grey-text"></i>
                    <input type="number" id="lastname" class="form-control validate" autocomplete="off">
                    <label data-error="Required field" data-success="" for="lastname">Frequency</label>
                </div>

                <div class="md-form mb-5">
                    <i class="mdi mdi-clipboard-text-outline prefix grey-text"></i>
                    <input type="email" id="email" class="form-control validate" autocomplete="off">
                    <label data-error="Not valid email" data-success="" for="email">Description</label>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-finish"><span class="lightFont signupFont">Create chore</span></button>
                <button type="button" class="btn btn-overdue" data-dismiss="modal"><span class="lightFont signupFont">Cancel</span></button>
            </div>
        </div>
    </div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="deleteChoreModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header btn-overdue text-center">
                <h4 class="modal-title w-100 font-weight-bold">Are you sure you want to delete this chore?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="text-center">
                    <h5>This chore will be permanently deleted for all users</h5>
                    <p id="deletedAuthorId"></p>
                </div>
                <div class="text-center mt-4">
                    <button type="button" class="btn btn-finish lightFont" id="deleteProfile">Confirm</button>
                    <button type="button" class="btn btn-overdue lightFont" data-dismiss="modal">Cancel</button>
                </div>
                <!-- <div class="text-center">
                     <h5 id="deleteSuccess" class="text-success"></h5>
                     <div id="deleteFailed">
                         <h5 id="" class="text-danger">Delete Failed</h5>
                     </div>
                 </div>-->
            </div>
        </div>
    </div>
</div>
<script type="module" src="/js/page/chore/home.js"></script>