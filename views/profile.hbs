<div class="container text-center mt-5 nav-space">
    <h2>{{title}}</h2>
    <img height="150px" width="150px"
        src="https://images.unsplash.com/photo-1531220847861-69e336daffa0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"
        alt="user defined image" class="rounded-circle my-3">

    <h5>Hi {{username}}!</h5>

    <form>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-6">
                <div class="d-flex justify-content-start">
                    <label for="firstName">First Name</label>
                </div>
                <input type="email" class="form-control" id="firstName" placeholder="First Name">
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-6">
                <div class="d-flex justify-content-start">
                    <label for="lastName">Last Name</label>
                </div>
                <input type="text" class="form-control" id="lastName" placeholder="Last Name">
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-6">
                <div class="d-flex justify-content-start">
                    <label for="email">Email</label>
                </div>
                <input disabled type="text" class="form-control" id="email" placeholder="Email">
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-6">
                <div class="d-flex justify-content-start">
                    <label for="inputGroupFile01">Profile Picture</label>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-6">
                <div class="d-flex justify-content-start">
                    <label for="school">School</label>
                </div>
                <input type="text" autocomplete="off" list="colleges" class="form-control" id="school"
                    placeholder="School">
                <datalist id="colleges">
                    <option value="CSU Monterey Bay"></option>
                    <option value="OsloMet"></option>
                    <option value="UiO"></option>
                </datalist>
            </div>
        </div>
    </form>

    <div class="my-5 text-center">
        <button class="btn btn-finish" data-toggle="modal"><span class="lightFont signupFont">Update</span></button>
        <button class="btn btn-overdue" data-toggle="modal" data-target="#deleteModal"><span class="lightFont signupFont">Delete</span></button>
    </div>

</div>

<!--Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header btn-overdue text-center">
                <h4 class="modal-title w-100 font-weight-bold">Are you sure you want to delete your profile?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="text-center">
                    <h5>You will not be able to recover your profile or log in if you confirm</h5>
                    <p id="deletedAuthorId"></p>
                </div>
                <div class="text-center mt-4">
                    <button type="button" class="btn btn-finish" id="deleteAuthor">Confirm</button>
                    <button type="button" class="btn btn-overdue" data-dismiss="modal">Cancel</button>
                </div>
               <!-- <div class="text-center">
                    <h5 id="deleteSuccess" class="text-success"></h5>
                    <div id="deleteFailed">
                        <h5 id="" class="text-danger">Delete Failed</h5>-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>